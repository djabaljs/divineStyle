                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            
                            <div class="card-header">
                                <h5 class="mb-0">Modifier vos informations</h5>
                            </div>
                            <div class="card-body">
                                {{form_start(form)}}
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_firstname">Nom</label>
                                            {{form_row(form.firstname, {attr:{'class': 'form-control', 'placeholder':'Nom','id':'firstname','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_lastname">Prénom</label>
                                            {{form_row(form.lastname, {attr:{'class': 'form-control', 'placeholder':'Prénom','id':'lastname','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_phone">Téléphone</label>
                                            {{form_row(form.phone, {attr:{'class': 'form-control', 'placeholder':'Téléphone','id':'phone', 'style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_email">Email</label>
                                            {{form_row(form.email, {attr:{'class': 'form-control', 'placeholder':'Email','id':'email','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_address">Adresse</label>
                                            {{form_row(form.address, {attr:{'class': 'form-control', 'placeholder':'Adresse','id':'email','style':'height:100px'}})}}
                                        </div>
                                    </div>
                                     <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_oldPassword">Ancien mot de passe</label>
                                            {{form_row(form.oldPassword, {attr:{'class': 'form-control', 'placeholder':'Ancien mot de passe','id':'email','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                     <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_password_first">Nouveau mot de passe</label>
                                            {{form_row(form.newPassword.first, {attr:{'class': 'form-control', 'placeholder':'Nouveau mot de passe','id':'email','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                     <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="setting_password_second">Repeter mot de passe</label>
                                            {{form_row(form.newPassword.second, {attr:{'class': 'form-control', 'placeholder':'Repeter mot de passe','id':'email','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                        <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</button>
                                        </div>
                                    </div>
                                    
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
