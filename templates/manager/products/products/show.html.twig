{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="{{asset('concept/assets/libs/css/product_details.css')}}">

{% endblock %}
{% block body %}
<div class="container-fluid dashboard-content ">
    <div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content">
                        {% set i = 1 %}
                        {% for image in product.imageUrls %}
                          <div class="tab-pane {{ i == 1 ? 'active': '' }}" id="pic-{{image['id']}}"><img src="{{image['src']}}" class="img-fluid" /></div>
                          {% set i = i + 1 %}
                        {% endfor %}
						</div>
						<ul class="preview-thumbnail nav nav-tabs">
                        {% set i = 1 %}
                        {% for image in product.imageUrls %}
						  <li class="{{ i == 1 ? 'active': '' }}"><a data-target="#pic-{{image['id']}}" data-toggle="tab"><img src="{{image['src']}}" class="img-fluid" /></a></li>
						    {% set i = i + 1 %}
                        {% endfor %}
                        </ul>
                     
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{product.name}}</h3>
						<h6 class="price">Prix actuel: <span>{{product.sellingPrice|format_currency('XOF')}}</span></h6>
						<h6 class="sizes">Tailles:
						{% for variation in product.productVariations %}
							{% if variation.product == product %}
								{{variation.length.name}}
							{% endif %}
						{% endfor %}
						</h6>
						<h6 class="colors">Couleurs:
						{% for variation in product.productVariations %}
							{% if variation.product == product %}
								{{variation.color.name}}
							{% endif %}
						{% endfor %}
						</h6>
					</div>
				</div>
			</div>
		</div>
</div>
{% endblock %}
{% block javascripts %}

{% endblock %}