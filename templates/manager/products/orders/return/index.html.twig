{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{asset('concept/assets/vendor/fonts/circular-std/style.css')}}" rel="stylesheet">
    <link rel="stylesheet" href="{{asset('concept/assets/libs/css/style.css')}}">
    <link rel="stylesheet" href="{{asset('concept/assets/vendor/fonts/fontawesome/css/fontawesome-all.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('concept/assets/vendor/datatables/css/dataTables.bootstrap4.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('concept/assets/vendor/datatables/css/buttons.bootstrap4.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('concept/assets/vendor/datatables/css/select.bootstrap4.css')}}">
    <link rel="stylesheet" type="text/css" href="{{asset('concept/assets/vendor/datatables/css/fixedHeader.bootstrap4.css')}}">
{% endblock %}
{% block body %}
<div class="container-fluid dashboard-content ">
      <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            <h2 class="pageheader-title">Data Tables</h2>
                            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Tables</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                  <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                         {% include 'shared/flash_message.html.twig' %}
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                  <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            
                            <a href="{{path('manager_orders_return_create')}}" class="btn btn-success" style="color:#fff" ><i class="fas fa-save"></i> Enregistrer un retour de marchandise</a>
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                   <div class="row">
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Liste des retours de marchandise</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered second" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>N°</th>
                                                <th>N° Facture 1</th>
                                                <th>N° Facture 2</th>
                                                <th>Client</th>
                                                <th>Avoir</th>
                                                <th>Date</th>
                                                {# <th>Heure</th> #}
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                           {% for order in orders %}
                                             <tr>
                                                <td>{{loop.index}}</td>
                                                <td>{{order.firstOrder.invoice.orders.orderNumber}}</td>
                                                <td>{{order.lastOrder.invoice.orders.orderNumber}}</td>
                                                <td>{{order.lastOrder.invoice.orders.customer}}</td>
                                                <td>{{order.amount|format_currency('XOF')}}</td>
                                                <td>{{order.createdAt|date('Y-m-d')}}</td>
                                                {# <td>{{order.createdAt|date('H:m')|format_datetime(pattern="H 'h' m ") }}</td> #}
                                                <td>
                                                  <a href="{{path('manager_orders_return_update', {id: order.id})}}" class="btn btn-warning btn-xs"><i class="fas fa-edit"></i></a>
                                                  <a href="{{path('manager_orders_return_invoice', {id: order.id})}}" class="btn btn-success btn-xs"><i class="fas fa-file"></i></a>
                                                  {# <a href="{{path('manager_orders_return_success', {id: order.id})}}" class="btn btn-info"><i class="fas fa-check-circle"></i></a> #}
                                                   <a href="#" class="btn btn-info btn-xs" data-toggle="modal" data-target="#customerMoadll{{order.id}}">
                                                            <i class="fas fas fa-check-circle"></i>
                                                    </a>
                                                   
                                                    <div class="modal fade" id="customerMoadll{{order.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    {# <h5 class="modal-title text-uppercase" style="color:#ffff;" id="customerMoadl{{order.id}}">Livraison de la commande No {{delivery.order.orderNumber}}</h5> #}
                                                                    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </a>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Voulez-vous vraiment valider ce retour de marchandise?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <a href="#" class="btn btn-secondary" data-dismiss="modal" style="color:#fff;">Annuler</a>
                                                                    <a href="{{path('manager_orders_return_success', {id: order.id})}}" class="btn btn-danger" style="color:#fff;">Supprimer</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                  {# <a href="{{path('manager_orders_return_delete', {id: order.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a> #}
                                                    <a href="#" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#customerMoadl{{order.id}}">
                                                            <i class="fas fa-trash"></i>
                                                    </a>
                                                   
                                                    <div class="modal fade" id="customerMoadl{{order.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    {# <h5 class="modal-title text-uppercase" style="color:#ffff;" id="customerMoadl{{order.id}}">Livraison de la commande No {{delivery.order.orderNumber}}</h5> #}
                                                                    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </a>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Voulez-vous vraiment supprimer ce retour de marchandise? Toutes les données liées à cette action seront annulées!</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <a href="#" class="btn btn-secondary" data-dismiss="modal" style="color:#fff;">Annuler</a>
                                                                    <a href="{{path('manager_orders_return_delete', {id: order.id})}}" class="btn btn-danger" style="color:#fff;">Supprimer</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                           {% endfor %}
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                 <th>N°</th>
                                                <th>N° Facture 1</th>
                                                <th>N° Facture 2</th>
                                                <th>Client</th>
                                                <th>Avoir</th>
                                                <th>Date</th>
                                                {# <th>Heure</th> #}
                                                <th>Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table  -->
                    <!-- ============================================================== -->
                </div>
                     
</div>
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>


    <script>
        $(document).ready(function() {
    $('#example').DataTable({
         buttons: [
        'pdf'
    ]
    });
   
    } );
    </script>
{% endblock %}