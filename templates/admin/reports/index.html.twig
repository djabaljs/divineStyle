{% extends 'base.html.twig' %}
    {% block stylesheets %}
        <style>
               .dataTables_filter, .custom-select, .example_length {
            display: none;
            }
        </style>
    {% endblock %}
{% block body %}

                <div class="container-fluid dashboard-content ">
                
                    <!-- ============================================================== -->
                    <!-- pageheader  -->
                    <!-- ============================================================== -->
                    <div class="row">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="page-header">
                                <h2 class="pageheader-title">Accueil</h2>
                                <p class="pageheader-text">Nulla euismod urna eros, sit amet scelerisque torton lectus vel mauris facilisis faucibus at enim quis massa lobortis rutrum.</p>
                                <div class="page-breadcrumb">
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">Accueil</li>
                                         </ol>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                          <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                         {% include 'shared/flash_message.html.twig' %}
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                    <!-- ============================================================== -->
                    <!-- end pageheader  -->
                    <!-- ============================================================== -->
                    <div class="ecommerce-widget">

                      <div class="row">
                            {% if is_granted("ROLE_SUPER_ADMIN") %}
                      
                            <!-- ============================================================== -->
                            <!-- sales  -->
                            <!-- ============================================================== -->
                            {% for shop in shops %}
                            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12">
                            <a href="{{path("admin_reports_shop", {id: shop.id})}}">
                                <div class="card border-3 border-top border-top-primary">
                                    <div class="card-body">
                                        <h5 class="text-muted">{{shop.name}}</h5>
                                        <div class="metric-value d-inline-block">
                                            <h4 class="mb-1">Produits</h4>
                                        </div>
                                         <div class="metric-label d-inline-block float-right text-success font-weight-bold">
                                            <span class="icon-circle-small icon-box-xs text-success bg-success-light"><i class="fa fa-fw fa-arrow-up"></i></span><span class="ml-1">{{shop.products|length}}</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            </div>

                            {% endfor %}
                            <!-- ============================================================== -->
                            <!-- end sales  -->
                            <!-- ============================================================== -->

                         {% endif %}
            
                        </div>
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                <div class="card">
                                    {% if is_granted("ROLE_SUPER_ADMIN") %}

                                    <h5 class="card-header">Rechercher les ventes par magasins ou par périodes</h5>
                                    {% else %}
                                    <h5 class="card-header">Ventes de la semaine</h5>
                                    {% endif %}

                                    <div class="card-body">
                                    {% if is_granted("ROLE_SUPER_ADMIN") %}

                                         <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            {{form_start(form)}}
                                               <div class="row">
                                                  <div class="col-md-3">
                                                    <div class="form-group">
                                                    <label for="order_search_shop">Magasin</label>
                                                    {{form_row(form.shop, {attr: {'class': 'form-control'}})}}
                                                    </div>
                                                 </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                    <label for="order_search_start">Date debut</label>
                                                    {{form_row(form.start, {attr: {'class': 'form-control'}})}}
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                    <label for="order_search_end">Date fin</label>
                                                    {{form_row(form.end, {attr: {'class': 'form-control'}})}}
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                    <label for="order_search_paymentType">Type de paiement</label>
                                                    {{form_row(form.paymentType, {attr: {'class': 'form-control'}})}}
                                                    </div>
                                                </div>
                                                 <div class="col-md-3">
                                                    <div class="form-group">
                                                    <br/>
                                                    <button class="btn btn-success form-control">Rechercher</button>
                                                    </div>
                                                </div>
                                               </div>
                                            {{form_end(form)}}
                                         </div>
                                    {% endif %}
                                         <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                            <div class="table-responsive">
                                                <table id="example" class="table table-striped table-bordered second" style="width:100%">
                                                    <thead>
                                                    <tr>
                                                        <th>N°</th>
                                                        <th>N° commande</th>
                                                        <th>Client</th>
                                                        <th>Montant</th>
                                                        <th>Remise</th>
                                                        <th>Statut</th>
                                                        <th>Date</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% set totalAmountPaid = 0 %}
                                                    {% set totalAmount = 0 %}
                                                    {% set totalDelivery = 0 %}
                                                    {% for delevery in deliveries %}
                                                       {% set totalDelivery = totalDelivery + delevery.amountPaid %}
                                                    {% endfor %}

                                                    {% for payment in results %}
                                                    <tr>
                                                        {% set totalAmountPaid = totalAmountPaid + payment.invoice.orders.saleTotal  %}
                                                        {% set totalAmount = totalAmount + payment.amount %}
                                                        <td>{{loop.index}}</td>
                                                        <td>{{payment.invoice.orders.orderNumber}}</td>
                                                        <td>{{payment.invoice.orders.customer}}</td>
                                                        <td>{{payment.invoice.orders.saleTotal| format_currency('XOF') }}</td>
                                                        <td>{{payment.invoice.discount| format_currency('XOF') }}</td>
                                                        {% if payment.status %}
                                                        <td>PAYÉ</td>
                                                        {% else %}
                                                        <td>ANNULÉ</td>
                                                        {% endif %}
                                                        <td>{{payment.invoice.orders.createdAt|date('Y-m-d')}}</td>
                                                            {# <td>{{payment.invoice.orders.createdAt|date('H:m')|format_datetime(pattern="H 'h' m ") }}</td> #}
                                                    </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <td colspan="6" align=right>Totales ventes</td>
                                                            <td colspan="1">{{totalAmountPaid|format_currency('XOF')}}</td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="6" align=right>Totales livraisons</td>
                                                            <td colspan="1">{{totalDelivery|format_currency('XOF')}}</td>
                                                        </tr>
                                                        <tr>
                                                            <td colspan="6" align=right>Totales ventes + livraisons</td>
                                                            <td colspan="1">{{(totalAmountPaid + totalDelivery)|format_currency('XOF')}}</td>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                         </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
          
          

{% endblock %}
