{% block body %}
<div class="container-fluid dashboard-content ">
      <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            <h2 class="pageheader-title">Data Tables</h2>
                            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Tables</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                         {% include 'shared/flash_message.html.twig' %}
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <a class="btn btn-info" href="{{path('admin_managers')}}" style="color:#fff"><i class="fas fa-list"></i> Liste des gestionnaires</a>
                            <a class="btn btn-success" href="{{path('admin_managers_create')}}" style="color:#fff"><i class="fas fa-save"></i> Enregistrer un gestionnaire</a>
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                   <div class="row">
                 
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            
                            <div class="card-header">
                                <h5 class="mb-0">Modification de gestionnaire</h5>
                            </div>
                            <div class="card-body">
                                          {{form_start(form)}}
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="user_firstname">Nom</label>
                                            {{form_row(form.firstname, {attr:{'class': 'form-control', 'placeholder':'Nom du gestionnaire','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                      <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="user_lastname">Prénom(s)</label>
                                            {{form_row(form.lastname, {attr:{'class': 'form-control', 'placeholder':'Prénom(s) du gestionnaire','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="user_email">Email</label>
                                            {{form_row(form.email, {attr:{'class': 'form-control', 'placeholder':'Email du gestionnaire','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="user_phone">Téléphone</label>
                                            {{form_row(form.phone, {attr:{'class': 'form-control', 'placeholder':'Téléphone du gestionnaire','style':'height:50px'}})}}
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label for="user_address">Adresse</label>
                                                {{form_row(form.address, {attr:{'class': 'form-control', 'placeholder':'Adresse du gestionnaire', 'style':'height:100px'}})}}
                                        </div>
                                    </div>
                                     <div class="col-md-8">
                                       <div class="form-group">
                                            <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i> Modifier</button>
                                        </div>
                                    </div>
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table  -->
                    <!-- ============================================================== -->
                </div>

</div>
{% endblock %}
