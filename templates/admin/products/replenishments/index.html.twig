{% extends 'base.html.twig' %}
{% block stylesheets %}
   <link rel="stylesheet" href="{{asset('concept/assets/vendor/select2/css/select2.css')}}"/>
{% endblock %}
{% block body %}
<div class="container-fluid dashboard-content ">
      <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            <h2 class="pageheader-title">Data Tables</h2>
                            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Tables</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                         {% include 'shared/flash_message.html.twig' %}
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>

                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <a href="{{path('admin_categories')}}" class="btn btn-success" style="color:#fff"><i class="fas fa-list"></i> Liste des catégories principales</a>
                        </button>
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                   <div class="row">
                 
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            
                            <div class="card-header">
                                <h5 class="mb-0">Enregistrer une catégorie principale</h5>
                            </div>
                            <div class="card-body">
                                {{form_start(form)}}
                                    <div class="row">
                                        <div class="col-md-6">
                                           <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="replenishment_product">Produit à réapprovisionner</label>
                                                    {{form_row(form.product, {attr:{'class': 'form-control','style':'height:50px'}})}}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="replenishment_provider">Fournisseur du produit</label>
                                                    {{form_row(form.provider, {attr:{'class': 'form-control', 'style':'height:50px'}})}}
                                                </div>
                                            </div>
                                             <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="replenishment_quantity">Quantité à réapprovisionner</label>
                                                    {{form_row(form.quantity, {attr:{'class': 'form-control', 'style':'height:50px'}})}}
                                                </div>
                                            </div>
                                             <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="replenishment_shop">Magasin concerné</label>
                                                    {{form_row(form.shop, {attr:{'class': 'form-control', 'style':'height:50px'}})}}
                                                </div>
                                            </div>
                                        </div>
                                      </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                            <button type="submit" class="btn btn-success"><i class="fas fa-recycle"></i> Faire le réapprovisionnement</button>
                                            </div>
                                        </div> 
                                     </div>
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table  -->
                    <!-- ============================================================== -->
                </div>
                     
</div>
{% endblock %}
{% block javascripts %}
 <script src="{{asset('concept/assets/vendor/select2/js/select2.min.js')}}"></script>
 <script>

$('#replenishment_product').select2();
$('#replenishment_provider').select2();
$('#replenishment_shop').select2();

</script>
{% endblock %}