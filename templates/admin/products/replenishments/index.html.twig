{% block javascripts %}
 <script src="{{asset('concept/assets/vendor/select2/js/select2.min.js')}}"></script>
 <script>

$('#replenishment_product').select2();
$('#replenishment_provider').select2();
$('#replenishment_shop').select2();
$('#replenishment_lengths').select2({
    placeholder: "Tailles disponibles",
    allowClear: true
});
$('#replenishment_colors').select2({
    placeholder: "Couleurs disponibles",
    allowClear: true
});

$('.element').hide();
$('#newVariation').click(function(){
    $('.element').show();
})
$('#replenishment_product').change(function(){

    if($(this).val() != 0){
          $.ajax({
        url: 'https://divinestylestock.net/user/admin/products/replenishment/',
        type: 'POST',
        data: {isAjaxQetRequest: true, product:$(this).val()},
        success:function(data){
            $('#data').html(data);
        }
    })

    }
  
})
$('#variationButton').click(function(){
    var lenghts = $('#replenishment_lengths').val();
    var colors =  $('#replenishment_colors').val();

    $.ajax({
        url: "{{path('admin_products_variations_create')}}",
        type: 'POST',
        data: {lengths: lenghts, colors: colors},
        success: function(data){
            $('#newVariationData').html(data);
        }
    });
})
</script>
