                </div>
                <br/> #}
                {# {% endif %} #}
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                   <div class="row">
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Liste des ventes effectuées</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="table table-striped table-bordered second" style="width:100%">
                                        <thead>
                                            <tr>
                                               <th>N°</th>
                                                <th>N° commande</th>
                                                <th>Client</th>
                                                <th>Montant</th>
                                                <th>Remise</th>
                                                <th>Statut</th>
                                                <th>Date</th>
                                                <th>Heure</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                         {% for payment in payments %}
                                            <tr>
                                                <td>{{loop.index}}</td>
                                                <td>{{payment.invoice.orders.orderNumber}}</td>
                                                <td>{{payment.invoice.orders.customer}}</td>
                                                <td>{{payment.invoice.orders.saleTotal| format_currency('XOF') }}</td>
                                                <td>{{payment.invoice.discount| format_currency('XOF') }}</td>
                                                 {% if payment.status %}
                                                <td>PAYÉ</td>
                                                {% else %}
                                                <td>ANNULÉ</td>
                                                {% endif %}
                                                <td>{{payment.invoice.orders.createdAt|date('Y-m-d')}}</td>
                                                <td>{{payment.invoice.orders.createdAt|date('H:m')|format_datetime(pattern="H 'h' m ") }}</td>
                                                 <td>
                                                    {# <a href="{{path('admin_products_orders_show', {id: payment.invoice.orders.id})}}" class="btn btn-info"><i class="fas fa-eye"></i></a> #}
                                                    {# <a href="{{path('admin_products_orders_update', {id: order.id})}}" class="btn btn-warning"><i class="fas fa-edit"></i></a> #}
                                                    <a href="{{path('admin_products_orders_invoice_show', {id: payment.invoice.id})}}" class="btn btn-primary"><i class="fas fa-file"></i></a>
                                                    <a href="{{path('admin_products_orders_delete', {id: payment.invoice.orders.id})}}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                                 
                                                    {% if payment.status %}
                                                    <a href="{{path('manager_cancel_order', {id: payment.invoice.orders.id})}}" class="btn btn-success"><i class="fas fa-times-circle"></i></a>
                                                    
                                                    {% endif %}
                                                </td>
                                            </tr>
                                         {% endfor %}
                                        </tbody>
                                        <tfoot>
                                              <tr>
                                                <th>N°</th>
                                                <th>N° commande</th>
                                                <th>Client</th>
                                                <th>Montant</th>
                                                <th>Remise</th>
                                                <th>Statut</th>
                                                <th>Date</th>
                                                <th>Heure</th>
                                                <th>Actions</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table  -->
                    <!-- ============================================================== -->
                </div>
                     
</div>
{% endblock %}
