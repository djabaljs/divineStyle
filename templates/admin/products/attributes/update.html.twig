{% extends 'base.html.twig' %}
{% block stylesheets %}
 <link rel="stylesheet" href="{{asset('concept/assets/vendor/select2/css/select2.css')}}"/>
  
{% endblock %}
{% block body %}
<div class="container-fluid dashboard-content ">
      <!-- ============================================================== -->
                <!-- pageheader -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="page-header">
                            <h2 class="pageheader-title">Data Tables</h2>
                            <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                            <div class="page-breadcrumb">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                        <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Tables</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Data Tables</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                         {% include 'shared/flash_message.html.twig' %}
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                <div class="row">
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                   <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <a class="btn btn-info" href="{{path('admin_products_attributes')}}" style="color:#fff"><i class="fas fa-list"></i> Liste des attributs de produit</a>
                            <a class="btn btn-success" href="{{path('admin_products_attributes_create')}}" style="color:#fff"><i class="fas fa-save"></i> Enregistrer des attributs de produit</a>
                   </div>
                    <!-- ============================================================== -->
                    <!-- button  -->
                    <!-- ============================================================== -->
                </div>
                <br/>
                
                <!-- ============================================================== -->
                <!-- end pageheader -->
                <!-- ============================================================== -->
                   <div class="row">
                 
                    <!-- ============================================================== -->
                    <!-- data table  -->
                    <!-- ============================================================== -->
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            
                            <div class="card-header">
                                <h5 class="mb-0">Modification d'attribut de produit</h5>
                            </div>
                            {{form_start(form)}}
                            <div class="card-body">
                               <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="attribute_name">Nom</label>
                                                {{form_row(form.name, {attr:{'class': 'form-control', 'placeholder':'Nom de l\'attribut','style':'height:50px'}})}}
                                            </div>
                                        </div>
                                        {% if color == 1 %}
                                         <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="attribute_colors">Couleurs utilisées pour les variations</label>
                                                    {{form_row(form.colors)}}
                                                </div>
                                            </div>
                                        {% else %}
                                          <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="attribute_lengths">Tailles utilisées pour les variations</label>
                                                    {{form_row(form.lengths)}}
                                                </div>
                                            </div>
                                        {% endif %}
                                     
                                           
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="attribute_visible">Visible sur la page produit</label>
                                                {{form_row(form.visible)}}
                                            </div>
                                        </div>
                                            <div class="col-md-12">
                                            <div class="form-group">
                                                <label for="attribute_variation">Utilisé pour les variations</label>
                                                {{form_row(form.variation)}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                            <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i> Enregistrer</button>
                                    </div>
                                </div> 
                            </div>
                                {{form_end(form)}}
                            </div>
                        </div>
                    </div>
                    <!-- ============================================================== -->
                    <!-- end data table  -->
                    <!-- ============================================================== -->
                </div>
                

</div>
{% endblock %}
{% block javascripts %}
 <script src="{{asset('concept/assets/vendor/select2/js/select2.min.js')}}"></script>
 <script>
    $('#attribute_lengths').select2({
        placeholder: "Tailles disponibles",
        allowClear: true
    });
    $('#attribute_colors').select2({
        placeholder: "Tailles disponibles",
        allowClear: true
    });
</script>
{% endblock %}